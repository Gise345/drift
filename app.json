{
  "expo": {
    "name": "Drift",
    "slug": "Drift",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "drift",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#00A0E3"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ky.drift.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Drift needs your location to show nearby taxis and calculate fares.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Drift needs your location to track your ride and provide navigation."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#00A0E3"
      },
      "package": "ky.drift.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "INTERNET",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "GOOGLE_MAPS_API_KEY_PLACEHOLDER"
        }
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://drift.ky/"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Drift to use your location for ride tracking and navigation."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": "https://drift.ky/"
      },
      "eas": {
        "projectId": "6eb5fb78-3d43-4420-b9e0-8201b805c8d6"
      }
    },
    "owner": "giselle345"
  }
}
